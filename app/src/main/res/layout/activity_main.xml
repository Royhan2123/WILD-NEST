<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="20dp"
    android:paddingEnd="20dp"
    android:paddingTop="80dp"
    tools:context=".MainActivity"
    tools:ignore="RtlSymmetry">

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/btnAccount"
        tools:ignore="Orientation"
        android:layout_marginEnd="30dp"
        android:background="@drawable/btn_linear"
        android:gravity="center"
        android:layout_gravity="end">

        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/account"
            android:importantForAccessibility="no" />

    </LinearLayout>

       <TextView
           android:id="@+id/txtWelcome"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           tools:text="@string/welcome_to_wildnest"
           android:textColor="#FF2CCF99"
           android:textSize="20sp"
           android:layout_marginTop="30dp"
           android:textStyle="bold"
           tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/txtDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="@string/desc"
        android:textColor="@color/lightGray"
        android:textSize="15sp"
        tools:ignore="TextContrastCheck" />

    <LinearLayout
        android:id="@+id/btnOutputCamera"
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_rounded"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/camera"
                android:importantForAccessibility="no" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:ignore="VisualLintBounds">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/camera"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descCamera"
                    android:textColor="@color/gray"
                    android:textSize="13sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/btnOutputGallery"
        android:layout_width="300dp"
        android:layout_height="115dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="20dp"
        android:paddingBottom="15dp"
        android:background="@drawable/bg_rounded"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            tools:ignore="UselessParent">
            <ImageView
                android:id="@+id/imgGallery"
                android:layout_width="wrap_content"
                android:layout_marginEnd="25dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/gallery"
                android:importantForAccessibility="no" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center"
                android:orientation="vertical"
                tools:ignore="VisualLintBounds">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/gallery"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="15sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/descGallery"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    tools:ignore="TextContrastCheck" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>